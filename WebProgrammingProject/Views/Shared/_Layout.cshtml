<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProgrammingProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProgrammingProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div id="LogoAndName">
            <img id="ErenAirlinesimage" src="ErenAirlines.png" alt="Logo">
            <span>Eren's AirLines</span>
        </div>
        <nav>
            <div id="Navigation">
                <div class="navPart"><a>Plan&Book</a></div>
                <div class="navPart"><a>FlyDifferent</a></div>
                <div class="navPart"><a>Discover</a></div>
                <div class="navPart"><a>Signup</a></div>
                <div class="navPart"><a>Signin</a></div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebProgrammingProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
