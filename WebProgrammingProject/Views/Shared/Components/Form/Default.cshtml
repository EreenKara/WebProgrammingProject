
<form id="ucus-guzergahi" asp-action="Booking" asp-controller="Ucus"   method="post">
    <div id="form">
        <div id="neredenDiv" class="form-div">
            <label id="neredenLabel" class="control-label">@languageService.GetKey("FormPartial.Nereden")</label>
            <select id="nereden" style="height: 55px;position:relative; bottom:-6px;" name="From" class="form-control"  asp-items="@ViewBag.airports"></select>
        </div>
        <div class="form-group">
        </div>
        <div class="form-div">
            <label id="nereyeLabel">@languageService.GetKey("FormPartial.Nereye")</label>
            <select id="nereye" style="height: 55px; position:relative; bottom:-6px;" name="To" class="form-control"  asp-items="@ViewBag.airports"></select>
        </div>
        <div class="form-div">
            <label class="kucuk-label">@languageService.GetKey("FormPartial.Gidis")</label>
            <input name="neZaman" class="form-control kucuk-label-input" type="date" placeholder=""/>
        </div>
        <div class="form-div">
            <label class="kucuk-label">@languageService.GetKey("FormPartial.Yolcu")</label>
            <input name="kacKisi" class="form-control kucuk-label-input"  value="1" type="number" />
        </div>

        <div id="form-button" class="form-div">
            <input class="form-control btn-success" type="submit" value="@languageService.GetKey("FormPartial.Button")"/>
        </div>
    </div>
</form>

<script src="../Views/Shared/Components/Form/Default.cshtml.js"></script>
