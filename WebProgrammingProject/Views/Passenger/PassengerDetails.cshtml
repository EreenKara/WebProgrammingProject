@model KisiViewModel

@{
    List<string> checkedSeats = ViewBag.checkedSeats;
}
<section role="form">
    <div class="passenger-information">
        <div class="baslik">
            <h2>Passenger Information</h2>
        </div>
        <h3>@TempData["Error"]</h3>
        <form asp-action="SatinAlmaTamamlandi" asp-controller="SatinAlma">
            @for (int i = 0; i < @ViewBag.kacKisi; i++)
            {
                <div class="form-div">
                    <div class="information">
                        <div class="form-baslik">
                            <h2>Passenger Information</h2>
                        </div>
                        <div class="inputlar">
                            <div class="radio-buttonlar">
                                <input class="form-check-input" type="radio" name="Gender" value="true"/><label>MR.</label>
                                <input class="form-check-input" type="radio" name="Gender" value="false"/><label>MS.</label>
                                <span asp-validation-for="Gender"></span> @*validation*@
                            </div>
                            <div></div>
                            <label>isim<input class="form-control" name="FirstName" type="text" /></label>
                            <label>Soyisim<input class="form-control" name="LastName" type="text" /></label>
                            <span asp-validation-for="FirstName"></span>@*validation*@
                            <span asp-validation-for="LastName"></span>@*validataion*@
                            <label>Doğum Tarihi<input class="form-control" name="DateofBirth" type="date" /></label>
                            @*<label><input class="form-check-input" type="checkbox" />Türkiye Vatandaşı mısınız?</label>*@
                            <span asp-validation-for="DateofBirth"></span>@*validataion*@
                            @*<span></span>validataion*@ 
                        </div>
                    </div>
                    <div class="contact">
                        <div class="form-baslik">
                            <h2>Passenger Contact</h2>
                        </div>
                        <div class="inputlar">
                            <label>E-mail<input class="form-control" name="Email" type="email" /></label>
                            <label>Telefon Numarası<input class="form-control" name="Tel" type="tel" /></label>
                            <span asp-validation-for="Email"></span>
                            <span asp-validation-for="Tel"></span>
                            <div><input class="form-check-input" name="Accept" type="checkbox" value="true"/><label>Kabul ediyor musunuz?</label></div>
                            <span asp-validation-for="Accept"></span>
                        </div>
                    </div>
                </div>
            }
            <input type="hidden" name="id" value="@ViewBag.flightId"/>
            <input type="hidden" name="type" value="@ViewBag.flightType"/>
            <input type="hidden" name="kacKisi" value="@ViewBag.kacKisi"/>
            <input type="hidden" name="price" value="@ViewBag.price" />
            @foreach (string seat in checkedSeats)
            {
                <input type="hidden" name="checkedSeats" value="@seat"/>
            }
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</section>