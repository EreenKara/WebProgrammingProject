@model List<EditUsersInRoleViewModel>

@{
    var roleID = ViewBag.RoleID;
}
<h3>@TempData["Error"]</h3>
<form asp-action="EditUsersInRole" asp-controller="HandleUsers" asp-area="Admins" asp-route-roleID="@roleID">
    <div class="card">
        <div class="card-header">
            <h3>Add or Remove users from this role</h3>
        </div>
        <div class="card-body">
            @for(int i =0; i<Model.Count;i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserID">
                    <input type="hidden" asp-for="@Model[i].UserName">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="EditRole" asp-controller="HandleUsers" asp-area="Admins" asp-route-roleID="@roleID" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>